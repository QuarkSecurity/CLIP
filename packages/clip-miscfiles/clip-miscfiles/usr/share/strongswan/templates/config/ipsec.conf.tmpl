# ipsec.conf - strongSwan IPsec configuration file

# basic configuration

config setup
	# strictcrlpolicy=yes
	# uniqueids = no
	charondebug="app -1, asn -1, cfg - 1, chd -1, dmn -1, enc -1, esp -1, ike -1, imc -1, imv -1, job -1, knl -1, lib -1, mgr -1, net -1, pts -1, tls -1, tnc -1"

conn %default
	ikelifetime=60m
	keylife=20m
	rekeymargin=3m
	keyingtries=1
	# as far as I know Android only supports IKEv1
	# (racoon is an IKEv1 keying daemon)
	keyexchange=ikev1

conn rw
	left={LEFTIP}
	leftcert=server.pem
	leftsubnet=0.0.0.0/0
	leftfirewall=yes
	leftauth=rsa-2048
	rightcert=client.pem
	rightauth=rsa-2048
	rightauth2=xauth
	rightsourceip={RIGHTIP}
	auto=add
	#cipher suite (exclamation mark means strict)
	ike=aes256-sha1-modp1024!

